# Minimal Hostinger-friendly security
<IfModule mod_rewrite.c>
RewriteEngine On
# Force HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Pretty links to hide query: /go/<token> or /ztrax/go/<token>
# Allow dot in token (base64url has '.')
RewriteRule ^go/([A-Za-z0-9._-]+)$ go.php?t=$1 [L,QSA]
RewriteRule ^ztrax/go/([A-Za-z0-9._-]+)$ go.php?t=$1 [L,QSA]
</IfModule>

# Basic headers (Hostinger supports mod_headers)
<IfModule mod_headers.c>
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "no-referrer"
</IfModule>

# Block access to hidden files and sensitive configs
<FilesMatch "(?i)^(\.env|\.git|\.htaccess|\.htpasswd|composer\.json|composer\.lock)$">
  Require all denied
</FilesMatch>

# Disable directory listing
Options -Indexes
